<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.travellog.TravelAddActivity"   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:text="여행 이름"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/inputTravelTitle"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/back"
            android:text="이곳에 여행 제목을 적어주세요"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="fill"
            android:text="여행을 기억하기 위한 간단한 이름을 지어주세요"
            android:textColor="@color/place_autocomplete_prediction_secondary_text"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="242dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/inputTravelStartDate"
            android:layout_alignStart="@+id/textView16"
            android:paddingBottom="10dp"
            android:text="여행 날짜"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:paddingBottom="5dp"
            android:text="시작일"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/inputTravelStartDate"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:background="@color/back"
            android:onClick="showDatePicker"
            android:paddingBottom="5dp"
            android:text="시작일 입력하기"
            android:textColor="@color/place_autocomplete_prediction_secondary_text"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:paddingBottom="5dp"
            android:text="종료일"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/inputTravelEndDate"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/back"
            android:onClick="showDatePicker"
            android:paddingBottom="5dp"
            android:text="종료일 입력하기"
            android:textColor="@color/place_autocomplete_prediction_secondary_text"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="257dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="454dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveTravelBtn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:text="확인"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

        <Button
            android:id="@+id/cancelTravelBtn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginRight="50dp"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:text="취소"
            android:textColor="@color/common_google_signin_btn_text_light_focused" />

    </LinearLayout>

</RelativeLayout>